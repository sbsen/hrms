@model MTS.LoginModels.NewUser
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmSetAccess" }))
{
   
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            <i class="icon-remove"></i>
        </button>
        <h3>
            Set Region
        </h3>
    </div>
    <div class="modal-body">
        <div class="row-fluid">
            <div class="span12">
                <div class="span12 marg0">
                    <div class="span5 marg0">
                        <div id="divCategory2" class="pad5">
                            <b>Available Access Rights</b>
                        </div>
                        <div class="pad5">
                             @Html.ListBoxFor(model => model.AvailableRegion, new SelectList(Model.AvailableRegion, "Value", "Text"), new { style = "height:100px;" })                           
                        </div>
                    </div>
                    <div class="span2 marg0 text-center">
                        <br>
                        <br>
                        <br>
                        <br>
                        <button id="MoveRight" class="btn btn-warning" title="Assign" type="button">
                            <i class="icon-forward icon-white"></i>
                        </button>
                        <button id="MoveLeft" class="btn btn-warning" title="Re-Assign" type="button">
                            <i class="icon-rewind icon-white"></i>
                        </button>
                    </div>
                    <div class="span5 marg0">
                        <div class="pad5">
                            <b>Selected Access Rights</b>
                        </div>
                        <div class="pad5">
                            @Html.ListBoxFor(model => model.SelectedRegion, new SelectList(Model.SelectedRegion, "Value", "Text"), new { style = "height:100px;" })                           
                            <br>
                            <span id="spanCardReviewerLength" class="adm_err_msg"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer clear">
        <input class="btn btn-info" onclick="return fnConfirm();" name="btn" value="Save"
            type="button">
        <a class="btn btn-info" href="#" data-dismiss="modal">Close</a></div>
}