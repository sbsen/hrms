@model MTS.LoginModels.ForgotPasswordModel

@{
    ViewBag.Title = "ForgotPassword";
    Layout = Url.Content("~/views/shared/_AccountLayout.cshtml");
if (Model.Message != null && Model.Message != "")
    {
        Model.Message =  Model.Message;
    }
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="container">
    <div class="p-t-40">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-signin" }))
        {
            <div class="card text-center card-shadow">
                    <div class="card-header form-signin-heading">
                        Forgot Password
                    </div>
                    <div class="card-body">
                        <div class="form-group">
            @Html.TextBoxFor(forget => forget.UserName, new { @class = "required form-control", @placeholder = "Username" })
            <div>@Html.ValidationMessageFor(forget => forget.UserName)</div></div>
                        <div class="form-group">
            @Html.DropDownListFor(secinfo => secinfo.inhrtSecurityQuestionModel.SelectedSecQsn, new SelectList(Model.inhrtSecurityQuestionModel.SecurityQsns, "Value", "Text"), "--Security Question--", new { @class = "required form-control" })
           <div>@Html.ValidationMessageFor(secinfo => secinfo.inhrtSecurityQuestionModel.SelectedSecQsn)</div></div>
                         <div class="form-group">
            @Html.TextBoxFor(secinfo => secinfo.inhrtSecurityQuestionModel.SecAns, new { @class = "required form-control", @placeholder = "Security Answer" })
            <div>
                   @Html.ValidationMessageFor(secinfo => secinfo.inhrtSecurityQuestionModel.SecAns)
                                    </div></div>
            <div class="validation-summary-errors text-left">@Html.DisplayFor(forget => forget.Message)</div>
            <div class="row m-t-20">
                <div class="col-md-6">
                    <button class="btn btn-light btn-block" type="button" onclick="window.location = '@Url.Content("~/MTS.Login/Account/Logon")'">Cancel</button>
                </div>
                <div class="col-md-6">
                    <button class="btn btn-primary btn-block" type="submit">Submit</button>
                </div>
            </div>
                        </div></div>
        }
    </div>
</div>
