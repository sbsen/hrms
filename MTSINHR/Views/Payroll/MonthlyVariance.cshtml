                //    sOut += '<td style="width:15%;" class="text-center"><span style="cursor:pointer;" onclick=UnAssignAsset(' + data[i].ASSET_TYPEID + ',' + data[i].ASSET_NAMEID + ',' + data[i].Item_Id + ',' + data[i].Employee_id + ',' + AssignDate + ')  class="fa fa-remove"/></td>';
