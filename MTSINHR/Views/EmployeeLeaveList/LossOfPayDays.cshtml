<script>
    $(function () {

        $('#Month').datepicker({
            changeMonth: true,
            changeYear: false,
            startView: "months",
            autoclose: "true",
            format: "MM",
            viewMode: "months",
            minViewMode: "months",


        });

        $('#Year').datepicker({
            changeMonth: false,
            changeYear: true,
            startView: "years",
            autoclose: "true",
            format: "yyyy",
            viewMode: "years",
            minViewMode: "years",


        });

    });
    function back() {

                window.location.href = '@Url.Action("EmployeeList", "EmployeeList")';
            
        }
    
    function ShowReport() {

        if ($("#lop").valid()) {
            $.ajax({

                type: "POST",
                url: '@Url.Content("~/EmployeeLeaveList/LossOfPayDays")',
                data: $("form").serialize(),
                success: function (result) {

                    debugger
                    if (result == 1) {
                        toastr.error("Lop Days Updated");

                    }
                    else {

                        toastr.error("No Data Found");
                    }
                },
            });
        }
    }

</script>
