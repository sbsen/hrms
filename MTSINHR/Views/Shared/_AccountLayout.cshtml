<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=10;IE=11;IE=Edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<title>xtraCHEF</title>*@
    <title>MTS-HR</title>

    @System.Web.Optimization.Styles.Render("~/bundles/bootstrapcss")
    @System.Web.Optimization.Styles.Render("~/bundles/bootstrapdt")
    @System.Web.Optimization.Styles.Render("~/bundles/fontawesome")
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/datepicker")
    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")
    @System.Web.Optimization.Styles.Render("~/bundles/main")
    
    @*<link rel="icon" href="~/Images/xchefX.png" type="image/png" sizes="16x16">*@
    <link rel="icon" href="~/Images/fav.png" type="image/png" sizes="16x16">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
   
    <script type="text/javascript">
        $(document).ready(function () {
           
            $(document).bind("ajaxSend", function () {
                $("#divimgloading").show();
            }).bind("ajaxComplete", function () {
                $("#divimgloading").hide();
            });
        });
    </script>
    <style>
        .field-validation-error {
            color: red;
        }
    </style>

</head>

<body>

    <div class="hide" id="divimgloading">

        <div class="loading" style="display: block;">
        </div>

    </div>

    <div class="modal hide fade" style="width: 930px; margin-left: -500px" id="divPDFpopup">
    </div>

    <div class="modal hide fade " style="width: 50%" id="divEmailContentpopup">
    </div>

    <div class="modal hide fade " style="width: 1030px; margin-left: -500px" id="divSearchClientpopup">
    </div>

    <div class="modal hide fade wid700" id="divmainpopup">
    </div>

    <div id="header">

        <div class="logo">
        </div>

    </div>


    @RenderBody()

    <div id="footer" align="center">

        <h6><small>Powered by MTS Software Solutions Inc.</small></h6>

    </div>

</body>

</html>
